# Production Environment Variables for Smart Matwana
NODE_ENV=production
PORT=5000

# MongoDB Atlas Connection
# IMPORTANT: Replace ALL placeholder values with your actual MongoDB Atlas credentials
# DO NOT commit real credentials to version control
MONGODB_URI=mongodb+srv://<DB_USERNAME>:<DB_PASSWORD>@<CLUSTER_NAME>.<RANDOM_ID>.mongodb.net/smart-matwana-ke?retryWrites=true&w=majority

# JWT Configuration
# IMPORTANT: Generate a secure random string for production
JWT_SECRET=<GENERATE_SECURE_JWT_SECRET_KEY>

# CORS Configuration
CORS_ORIGIN=https://smart-matwana-ke.web.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Firebase Configuration
FIREBASE_PROJECT_ID=smart-matwana-ke
