# Production Environment Variables for Smart Matwana
NODE_ENV=production
PORT=5000

# MongoDB Atlas Connection
# Replace <password> with your actual password and <cluster-url> with your cluster URL
MONGODB_URI=mongodb+srv://smart-matwana-user:<password>@<cluster-url>/smart-matwana-ke?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random

# CORS Configuration
CORS_ORIGIN=https://smart-matwana-ke.web.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Firebase Configuration
FIREBASE_PROJECT_ID=smart-matwana-ke
